const { Router } = require('express');
const router = Router();

// DB Conection
var mysql = require('mysql');

var conexion = mysql.createConnection({
    host: 'localhost',
    database: 'todooficios',
    user: 'root',
    password: 'root',
});

conexion.connect(function (err) {
    if (err) {
        console.error('Error de conexion: ' + err.stack);
        return;
    }
    console.log('Conectado con el identificador ' + conexion.threadId);
});

router.get('/proyectos', (req, res) => {
    conexion.query(`SELECT * FROM proyecto`, function (error, results, fields) {
        if (error)
            throw error;

        res.json(results);
    });
});

router.post('/proyectos', (req, res) => {
    const {idCliente, idTrabajador, especialidad, fecha, comentarioCliente} = req.body;

    if(idCliente && idTrabajador && especialidad && fecha && comentarioCliente){
        conexion.query('INSERT INTO proyecto (idCliente, idTrabajador, especialidad, fecha, comentarioCliente) VALUES("' + idCliente + '", "' + idTrabajador + '", "' + especialidad + '", "' + fecha  + '", "' + comentarioCliente  + '")', function (error, results) {
            if (error)
                throw error;

            res.send('Received')
        });
    }else{
        res.send('Failed');
    }
});

router.get('/proyectos/:id', (req, res) => {
    console.log(req.params);

    conexion.query('SELECT * FROM proyecto WHERE idProyecto = ' + req.params.id, function (error, results, fields) {
        if (error)
            throw error;

        res.json(results);
    });
});

module.exports = router;